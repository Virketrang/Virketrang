{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noPropertyAccessFromIndexSignature": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@packages/*": [
        "../../packages/*"
      ],
      "@components": [
        "./src/components/index"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@api": [
        "src/api/index"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@constants": [
        "./src/constants"
      ],
      "@icons/*": [
        "./src/icons/*"
      ],
      "@icons": [
        "./src/icons"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@types": [
        "./src/types"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./build/webshop/client/web/types/**/*.ts",
    "./build/types/**/*.ts",
    "./dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
