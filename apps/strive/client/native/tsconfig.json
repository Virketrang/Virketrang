{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react-native",
        "lib": ["DOM", "ESNext"],
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "baseUrl": ".",
        "typeRoots": ["src/types"],
        "paths": {
            "@components/*": ["src/components/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "index.js"],
    "extends": "expo/tsconfig.base"
}
