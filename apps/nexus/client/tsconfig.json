{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "typeRoots": [
            "apps/nexus/client/declarations.d.ts",
            "apps/nexus/client/unimport.d.ts",
            "packages/types/index.d.ts"
        ],
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "include": [
        "src",
        "unimport.d.ts",
        "../../../vite.workspace.ts",
        "../../../unimport.workspace.ts",
        "../../../packages/**/*",
        "../../../config/**/*",
        "declarations.d.ts"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
