{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "isolatedModules": true,
        "typeRoots": ["./apps/nexus/client/unimport.d.ts"],
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*.astro",
        "src/**/*.tsx",
        "src/**/*.ts",
        "unimport.d.ts",
        "../../../vite.workspace.ts",
        "../../../packages/**/*",
        "../../../config/**/*"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
