---
import AuthenticationLayout from '@/nexus/client/layouts/auth.astro'
import { Input } from '../../../components'

const TITLE = 'NEXUS - opret bruger'
const BACK = '/authentication/signup/'
const NEXT = '/authentication/signup/name'
---

<AuthenticationLayout title={TITLE} greeting="Velkommen" back={BACK}>
    <form grid grid-columns-4 grid-rows-4 style="gap: 1.5rem;" w-32>
        <Input label="E-mail" name="email" column="1 / 5" row="1" />
        <Input label="Landekode" name="country_code" column="1 / 2" row="2" />
        <Input label="Telefonnummer" name="subscriber_number" column="2 / 5" row="2" />
        <Input label="Adgangskode" name="password" column="1 / 5" row="3" />
        <a
            h-3
            w-full
            elevated
            btn-primary-bg
            btn-primary-text
            style="grid-column: 1 / 5; grid-row: 4;"
            href={NEXT}
            transition:name="primary-button">NÃ¦ste</a
        >
    </form>
</AuthenticationLayout>
<script>
    import { $CreateUser } from '@/nexus/client/stores'
    import { Utils } from '../../../common'

    document.addEventListener('astro:page-load', () => {
        Utils.bindInputsToStore($CreateUser, ['email', 'country_code', 'subscriber_number', 'password'])
    })
</script>
