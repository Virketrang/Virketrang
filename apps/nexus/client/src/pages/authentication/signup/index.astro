        <Div flex vertical center gap="3rem">
            <Logo transition:name="logo" />
            <Heading medium>Velkommen</Heading>
        </Div>
        <Div flex vertical center gap="2rem" width="32rem" margin="4rem 0 2rem 0">
            <Paragraph>Jeg Ã¸nsker at oprette mig som</Paragraph>
            <Button stretch elevated large href={BUSINESS} transition:name="primary-button">Virksomhed</Button>
