{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "esnext",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "noEmit": true,
        "composite": true,
        "downlevelIteration": true,
        "typeRoots": ["./src/types/declarations.d.ts", "unimport.d.ts", "./node_modules/@types"],
        "skipLibCheck": true,
        "allowJs": true,
        "allowImportingTsExtensions": true
    },
    "include": ["./src/**/*", "../../../packages/**/*", "../../../config/**/*", "unimport.d.ts"],
    "exclude": ["node_modules", "dist"]
}
