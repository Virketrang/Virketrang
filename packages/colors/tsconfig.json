{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
        "types": ["node"],
        "outDir": "dist/esm",
        "module": "es2015",
        "moduleResolution": "node",
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "declaration": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": ["src/**/*.ts"]
}
