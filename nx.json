{
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build"]
            }
        }
    },
    "namedInputs": {
        "stories": ["!{projectRoot}/**/*.stories.ts", "!{projectRoot}/**/*.stories.tsx"],
        "dockerfiles": ["Dockerfile", ".dockerignore"],
        "readme": ["README.md"],
        "license": ["LICENSE"]
    },
    "targetDefaults": {
        "build": {
            "inputs": ["^stories", "^dockerfiles"],
            "dependsOn": ["^build"]
        },
        "dev": {},
        "test": {
            "inputs": ["^stories", "^dockerfiles"]
        },
        "lint": {}
    }
}
