{
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build"]
            }
        }
    },
    "namedInputs": {
        "stories": ["!{projectRoot}/**/*.md", "!{projectRoot}/**/*.stories.ts", "!{projectRoot}/**/*.stories.tsx"],
        "dockerfiles": ["Dockerfile", ".dockerignore"]
    },
    "targetDefaults": {
        "build": {
            "inputs": ["^stories", "^dockerfiles"],
            "dependsOn": ["^build"]
        },
        "dev": {},
        "test": {
            "inputs": ["^stories", "^dockerfiles"]
        }
    }
}
