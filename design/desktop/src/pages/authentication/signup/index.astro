---
import { Logo } from '@/nexus/client/desktop/components/index'
import GlobalLayout from '@/nexus/client/desktop/layouts/global.astro'

const TITLE = 'Nexus - opret bruger'
const BACK = '/'
const NEXT = '/authentication/signup/credentials'
---

<GlobalLayout title={TITLE}>
    <main flex width="100%" min-height="100vh" flex-direction:column flex:center>
        <div transition:name="logo-wrapper" flex flex-direction:column align-items:center gap="3rem">
            <Logo transition:name="logo" />
            <h3 transition:name="logo-text">Velkommen</h3>
        </div>
        <div flex flex-direction:column gap="2rem" width="32rem" margin="4rem 0 2rem 0">
            <div flex flex-direction:column gap="1rem">
                <h4 text-align:center uppercase>Oplysning</h4>
                <p text-align:center text-wrap:balance>
                    Nexus er stadig under udvikling. Du skal derfor bruge en kode for at oprette en bruger.
                </p>
            </div>
            <a
                width="100%"
                height="3rem"
                elevated
                btn-primary-bg
                btn-primary-text
                href={NEXT}
                transition:name="primary-button">Start</a
            >
            <a href={BACK} underline>Tilbage</a>
        </div>
    </main>
</GlobalLayout>
