---
import AuthenticationLayout from '@/nexus/client/desktop/layouts/auth.astro'
import { Input, Select } from '../../../components'

const TITLE = 'Nexus - opret bruger'
const BACK = '/authentication/signup/name'
const NEXT = '/authentication/signup/bank-account'
---

<AuthenticationLayout title={TITLE} greeting="Velkommen" back={BACK}>
    <form grid grid-template-columns="repeat(4, 1fr)" grid-template-rows="repeat(4, 1fr)" gap="1.5rem" width="32rem">
        <Input label="Gadenavn" name="street_name" column="1 / 3" row="1" />
        <Input label="Husnr." name="street_number" column="3 / 4" row="1" />
        <Input label="Lejlighed" name="apartment" column="4 / 5" row="1" />
        <Input label="By" name="city" column="1 / 4" row="2" />
        <Input label="Postnr." name="postal_code" column="4 / 5" row="2" />
        <Select label="Land" name="country" column="1 / 5" row="3">
            <option selected value="Denmark">Danmark</option>
        </Select>
        <a
            href={NEXT}
            btn-primary-bg
            btn-primary-text
            style="grid-column: 1 / 5; grid-row: 4;"
            width="100%"
            height="3rem"
            elevated
            transition:name="primary-button">NÃ¦ste</a
        >
    </form>
</AuthenticationLayout>
<script>
    import { $CreateUser } from '@/nexus/client/desktop/stores'
    import { Utils } from '../../../common'

    document.addEventListener('astro:page-load', () => {
        Utils.bindInputsToStore($CreateUser, [
            'street_name',
            'street_number',
            'apartment',
            'city',
            'postal_code',
            'country'
        ])
    })
</script>
