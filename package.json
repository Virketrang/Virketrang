{
    "name": "@virketrang/virketrang",
    "version": "0.0.0",
    "description": "The Virketrang monorepo",
    "license": "MIT",
    "private": true,
    "packageManager": "pnpm@8.6.11",
    "engines": {
        "node": ">=20.5.0",
        "yarn": "please-use-pnpm",
        "npm": "please-use-pnpm",
        "pnpm": ">=8.6.11"
    },
    "author": {
        "name": "Sigfred Frey Nørgaard Knudsen",
        "email": "sigfred@virketrang.com",
        "url": "https://www.virketrang.com/staff/sigfred"
    },
    "contributors": [
        {
            "name": "Isabella Liedecke Mørck",
            "email": "isabella@virketrang.com",
            "url": "https://www.virketrang.com/staff/isabella"
        }
    ],
    "keywords": [
        "virketrang",
        "monorepo",
        "react",
        "typescript",
        "nextjs",
        "nestjs",
        "postgresql",
        "typeorm",
        "sass",
        "nx",
        "docker",
        "storybook",
        "pnpm",
        "workspace"
    ],
    "homepage": "https://www.virketrang.com",
    "bugs": {
        "url": "https://github.com/virketrang/virketrang/issues",
        "email": "sigfred@virketrang.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/virketrang/virketrang"
    },
    "scripts": {
        "SPECIAL": "-------------- SPECIAL --------------",
        "prepare": "husky install",
        "preinstall": "npx only-allow pnpm",
        "nvmrc": "node -v > .nvmrc",
        "postinstall": "pnpm nvmrc",
        "predev": "pnpm nvmrc",
        "pnx": "nx",
        "GENERAL": "-------------- GENERAL --------------",
        "dev": "pnpm run server && pnpm run liedecke-noergaard",
        "start": "pnpm run server && pnpm run liedecke-noergaard",
        "test": "pnpm run website:test && pnpm run liedecke-noergaard:test && pnpm run server:test && pnpm run nexus:test",
        "lint": "pnpm run website:lint && pnpm run liedecke-noergaard:lint && pnpm run server:lint && pnpm run nexus:lint",
        "build": "pnpm run website:build && pnpm run liedecke-noergaard:build && pnpm run server:build && pnpm run nexus:build",
        "reinstall": "rm -rf node_modules/",
        "update": "pnpm run update:storybook && pnpm run update:next && pnpm run update:nx",
        "APPS": "-------------- APPS --------------",
        "server:dev": "nx start @virketrang/server",
        "server:start": "nx start @virketrang/server",
        "server:test": "nx test @virketrang/server",
        "server:lint": "nx lint @virketrang/server",
        "server:build": "nx build @virketrang/server",
        "website:dev": "nx dev @virketrang/website",
        "website:start": "nx start @virketrang/website",
        "website:test": "nx test @virketrang/website",
        "website:lint": "nx lint @virketrang/website",
        "website:build": "nx build @virketrang/website",
        "nexus:dev": "nx dev nexus",
        "nexus:start": "nx start nexus",
        "nexus:test": "nx test nexus",
        "nexus:lint": "nx lint nexus",
        "nexus:build": "nx build nexus",
        "strive:dev": "nx dev @virketrang/strive",
        "strive:start": "nx start @virketrang/strive",
        "strive:test": "nx test @virketrang/strive:test",
        "strive:lint": "nx lint @virketrang/strive:lint",
        "strive:build": "nx build @virketrang/strive:build",
        "liedecke-noergaard:dev": "nx dev @virketrang/liedecke-noergaard",
        "liedecle-noergaard:start": "nx start @virketrang/liedecke-noergaard",
        "liedecke-noergaard:test": "nx test @virketrang/liedecke-noergaard",
        "liedecke-noergaard:lint": "nx lint @virketrang/liedecke-noergaard",
        "liedecke-noergaard:build": "nx build @virketrang/liedecke-noergaard",
        "LIBRARIES": "---------- LIBRARIES ----------",
        "resolut:build": "nx build resolut",
        "resolut:client:build": "nx build @resolut/client",
        "resolut:client": "nx dev @resolut/client",
        "resolut:server": "nx dev @resolut/server",
        "css-properties:react:build": "nx build @css-properties/react",
        "UPDATES": "---------- UPDATES ----------",
        "update:storybook": "npx storybook@latest upgrade",
        "update:next": "pnpm --recursive update next react react-dom eslint-config-next --latest",
        "update:nx": "pnpm update \"@nx/*\" \"@nrwl/*\"",
        "update:vite": "pnpm --recursive update vite && pnpm --recursive update @vitejs/plugin-react",
        "update:pnpm": "pnpm i -D pnpm@latest -w",
        "WORKFLOWS": "---------- WORKFLOWS ----------",
        "nexus": "pnpm --filter nexus build"
    },
    "devDependencies": {
        "@nrwl/cli": "^15.9.2",
        "@nrwl/nx-cloud": "latest",
        "@nx/eslint-plugin": "^16.5.5",
        "@nx/js": "16.3.2",
        "@nx/react": "^16.3.2",
        "@nx/vite": "^16.3.2",
        "@nx/workspace": "^16.1.4",
        "eslint": "^8.40.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.3",
        "nx": "16.1.4",
        "pnpm": "^8.6.11",
        "prettier": "^2.8.4",
        "prettier-plugin-astro": "^0.12.0",
        "rimraf": "^3.0.2",
        "typescript": "^5.0.4",
        "vite": "^4.4.4",
        "vitest": "^0.31.0"
    }
}
