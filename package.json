{
    "name": "@virketrang/virketrang",
    "version": "0.0.0-alpha",
    "description": "The Virketrang monorepo",
    "license": "MIT",
    "private": true,
    "packageManager": "pnpm@8.1.0",
    "engines": {
        "node": ">=19.8.1",
        "yarn": "please-use-pnpm",
        "npm": "please-use-pnpm",
        "pnpm": ">=8.1.0"
    },
    "author": {
        "name": "Sigfred Frey Nørgaard Knudsen",
        "email": "sigfred@virketrang.com",
        "url": "https://www.virketrang.com/staff/sigfred"
    },
    "contributors": [
        {
            "name": "Isabella Liedecke Mørck",
            "email": "isabella@virketrang.com",
            "url": "https://www.virketrang.com/staff/isabella"
        }
    ],
    "keywords": [
        "virketrang",
        "monorepo",
        "react",
        "typescript",
        "nextjs",
        "nestjs",
        "postgresql",
        "typeorm",
        "sass",
        "nx",
        "docker",
        "storybook",
        "pnpm",
        "workspace"
    ],
    "homepage": "https://www.virketrang.com",
    "bugs": {
        "url": "https://github.com/virketrang/virketrang/issues",
        "email": "sigfred@virketrang.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/virketrang/virketrang"
    },
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "reinstall": "npkill",
        "pnx": "nx",
        "APPS": "-------------- APPS --------------",
        "strive": "",
        "strive:client": "nx dev @virketrang/strive-client",
        "strive:server": "",
        "pmt": "pnpm run prometheus",
        "pmt:c": "nx dev @virketrang/prometheus-client",
        "pmt:s": "nx dev @virketrang/prometheus-server",
        "prometheus": "concurrently \"pnpm run prometheus:server\" \"pnpm run prometheus:client\"",
        "prometheus:client": "nx dev @virketrang/prometheus-client",
        "prometheus:server": "nx dev @virketrang/prometheus-server",
        "ln": "pnpm run liedecke-noergaard",
        "ln:c": "pnpm run liedecke-noergaard:client",
        "liedecke-noergaard": "concurrently \"pnpm run prometheus:server\" \"pnpm run liedecke-noergaard:client\"",
        "liedecke-noergaard:client": "nx dev @virketrang/liedecke-noergaard",
        "PACKAGES": "---------- PACKAGES ----------",
        "resolut-forms": "nx dev @resolut/forms",
        "resolut-forms:start": "nx start @resolut/forms",
        "UPDATE": "---------- UPDATE ----------",
        "update storybook": "npx storybook@latest upgrade"
    },
    "devDependencies": {
        "@nrwl/cli": "^15.9.2",
        "@nrwl/nx-cloud": "latest",
        "@nrwl/workspace": "^15.9.2",
        "@parcel/packager-ts": "^2.8.3",
        "@parcel/transformer-sass": "^2.8.3",
        "@parcel/transformer-typescript-types": "^2.8.3",
        "concurrently": "^7.6.0",
        "npkill": "^0.11.2",
        "nx": "15.9.2",
        "parcel": "^2.8.3",
        "prettier": "^2.8.4",
        "syncpack": "^9.8.4",
        "typescript": "^5.0.4",
        "wait-on": "^7.0.1"
    },
    "prettier": {
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4,
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "quoteProps": "consistent",
        "bracketSameLine": true
    }
}
