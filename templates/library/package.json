{
    "name": "@virketrang/library-template",
    "version": "0.0.0",
    "description": "Library template",
    "private": true,
    "source": "src/index.ts",
    "main": "dist/main.js",
    "module": "dist/module.js",
    "unpkg": "dist/umd.js",
    "types": "dist/types.d.ts",
    "exports": {
        "types": "./dist/types.d.ts",
        "import": "./dist/module.js",
        "require": "./dist/main.js"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "scripts": {
        "prepublishOnly": "pnpm run build",
        "reset": "rm -rf ./.build/*",
        "copy": "copyfiles src/**/*.css .build",
        "compile": "tsc && pnpm run copy",
        "bundle": "tsc --project ../../tsconfig.webpack.json --baseUrl . --rootDir . --outDir ./.build && webpack --config .build/webpack.config.js && tsc --emitDeclarationOnly --outFile dist/index.d.ts",
        "build:webpack": "pnpm run reset && pnpm run compile && pnpm run bundle",
        "watch": "parcel watch",
        "build": "parcel build",
        "webpack": "pnpm run reset && tsc --project ../../tsconfig.webpack.json --baseUrl . --rootDir . --outDir ./.build && webpack --config .build/webpack.config.js"
    },
    "keywords": [
        "Library",
        "Template"
    ],
    "author": "Sigfred Frey NÃ¸rgaard Knudsen",
    "license": "MIT",
    "devDependencies": {
        "@parcel/packager-ts": "^2.8.3",
        "@parcel/transformer-sass": "^2.8.3",
        "@parcel/transformer-typescript-types": "^2.8.3",
        "@types/node": "^18.15.11",
        "@types/react": "^18.0.37",
        "@types/webpack": "^5.28.1",
        "babel-loader": "8.0.0-beta.6",
        "copyfiles": "^2.4.1",
        "css-loader": "^6.7.3",
        "mini-css-extract-plugin": "^2.7.5",
        "parcel": "^2.8.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "style-loader": "^3.3.2",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.4",
        "typescript-declaration-webpack-plugin": "^0.2.2",
        "webpack": "^5.76.3",
        "webpack-cli": "^5.0.1"
    },
    "peerDependencies": {
        "react": "^18.2.0"
    }
}
