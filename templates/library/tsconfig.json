{
    "$schema": "../../schemas/typescript.json",
    "extends": ["../../tsconfig.base.json"],
    "compilerOptions": {
        "outDir": "./.build/src",
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM"],
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
