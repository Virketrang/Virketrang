{
    // VSCODE
    "editor.fontSize": 16,
    "markdownlint.config": {
        "MD030": false
    },
    "workbench.iconTheme": "material-icon-theme",
    "explorer.compactFolders": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/tmp": true,
        "**/node_modules": false,
        "**/dist": false,
        "**/.next": true,
        ".husky/_": true,
        "website/.vscode": true,
        "apps/**/.vscode": false,
        "**/tsconfig.tsbuildinfo": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/tmp/**": true,
        "**/bower_components/**": true,
        "**/dist/**": true
    },
    // TYPESCRIPT
    "typescript.tsdk": "/Users/sigfred/Dropbox/Virketrang/Webudvikling/node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    // JAVASCRIPT
    "javascript.updateImportsOnFileMove.enabled": "always",
    // ESLINT
    "eslint.workingDirectories": [
        "website",
        "apps/**",
        "apps/**/server",
        "apps/**/client",
        "libraries/**",
        "libraries/**/packages/**"
    ],
    // MATERIAL ICONS THEME
    "material-icon-theme.folders.associations": {
        // APPS
        "dashboard": "Admin",
        // LIBRARIES
        "resolut": "React-components",
        "css-properties": "Css",
        "flutter-colors": "Theme",
        //PACKAGES
        "http": "Connection",
        // CLIENT
        "desktop": "Client",
        "native": "Mobile",
        // NEXT
        "next": "Next",
        // ELECTRON
        "electron": "Client",
        // SUBDIRECTORIES
        "entities": "Class",
        "features": "Stack",
        "composables": "Stack",
        "ui": "Content",
        "forms": "Mock",
        "attributes": "Other",
        // TYPESCRIPT
        "enums": "Mappings",
        // DOCUMENTS
        "legal": "Contract",
        "word": "Docs"
    },
    "material-icon-theme.files.associations": {
        "vitest.workspace.ts": "Vitest",
        "vite.workspace.ts": "Vite",
        "tsconfig.nest.json": "Tsconfig",
        "docker.dev.yaml": "Docker",
        "docker.prod.yaml": "Docker"
    },
    "typescript.inlayHints.parameterNames.enabled": "all",
    "material-icon-theme.activeIconPack": "react",
    "editor.formatOnSave": true,
    "prettier.configPath": "./.prettierrc.js",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.documentSelectors": ["**/*.astro"],
    "[astro]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
