{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./dist",
        "diagnostics": false,
        "extendedDiagnostics": false,
        "typeRoots": ["unimport.d.ts"],
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strictBindCallApply": false,
        "paths": {
            "@packages/*": ["../packages/*"],
            "@/*": ["./src/app/*"]
        }
    }
}
