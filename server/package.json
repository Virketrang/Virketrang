{
    "name": "@virketrang/server",
    "version": "0.0.0",
    "description": "The Virketrang server",
    "main": "build/main.js",
    "author": "Sigfred Frey NÃ¸rgaard Knudsen",
    "private": true,
    "license": "MIT",
    "scripts": {
        "DEV": "-------------- DEV --------------",
        "dev": "nest start --watch --entryFile=apps/prometheus/server/src/main.js",
        "BUILD": "-------------- BUILD --------------",
        "prebuild": "rimraf build",
        "build": "nest build",
        "FORMAT": "-------------- FORMAT --------------",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "LINT": "-------------- LINT --------------",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "START": "-------------- START --------------",
        "start": "nest start",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node build/main",
        "TEST": "-------------- TEST --------------",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@google-cloud/storage": "^6.9.5",
        "@mikro-orm/core": "^5.7.0",
        "@mikro-orm/nestjs": "^5.1.8",
        "@mikro-orm/postgresql": "^5.7.0",
        "@nestjs/common": "^9.4.0",
        "@nestjs/config": "^2.3.1",
        "@nestjs/core": "^9.4.0",
        "@nestjs/microservices": "^9.4.0",
        "@nestjs/platform-express": "^9.4.0",
        "joi": "^17.8.3",
        "pg": "^8.10.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "~7.8.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.4.2",
        "@nestjs/schematics": "^9.1.0",
        "@nestjs/testing": "^9.4.0",
        "@types/express": "^4.17.17",
        "@types/jest": "29.5.1",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.16.0",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "jest": "29.5.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "29.1.0",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.0.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "mikro-orm": {
        "configPaths": [
            "./build/apps/cms/server/src/mikro-orm.config.js",
            "./src/mikro-orm.config.ts"
        ]
    }
}
