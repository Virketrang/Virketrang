{
    "name": "@virketrang/server",
    "version": "0.0.0",
    "description": "The Virketrang server",
    "author": {
        "name": "Sigfred Frey Nørgaard Knudsen",
        "email": "sigfred@virketrang.com",
        "url": "https://www.virketrang.com/"
    },
    "contributors": [
        {
            "name": "Isabella Liedecke Mørck",
            "email": "isabella@virketrang.com",
            "url": "https://www.virketrang.com/staff/isabella"
        }
    ],
    "private": true,
    "license": "MIT",
    "scripts": {
        "DEV": "-------------- DEV --------------",
        "dev": "nest start --watch",
        "BUILD": "-------------- BUILD --------------",
        "prebuild": "rimraf build",
        "build": "nest build",
        "FORMAT": "-------------- FORMAT --------------",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "LINT": "-------------- LINT --------------",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "START": "-------------- START --------------",
        "start": "nest start",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node build/main",
        "TEST": "-------------- TEST --------------",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "UPDATE": "-------------- UPDATE --------------",
        "update": "pnpm run update:mikro-orm && pnpm run update:google-cloud && pnpm run update:nest-js && pnpm run update:misc && pnpm run update:webpack && pnpm run update:types && pnpm run update:typescript && pnpm run update:eslint",
        "update:mikro-orm": "pnpm update @mikro-orm/core @mikro-orm/nestjs @mikro-orm/postgresql pg",
        "update:google-cloud": "pnpm update @google-cloud/storage",
        "update:nest-js": "pnpm update @nestjs/core @nestjs/common @nestjs/config @nestjs/microservices @nestjs/platform-express @nestjs/cli @nestjs/schematics @nestjs/testing",
        "update:misc": "pnpm update class-transformer class-validator reflect-metadata rimraf rxjs source-map-support",
        "update:webpack": "pnpm update tsconfig-paths ",
        "update:types": "pnpm update @types/express @types/multer @types/node",
        "update:typescript": "pnpm update typescript unimport ts-loader swc-loader @swc/core @swc/cli",
        "update:eslint": "pnpm update eslint eslint-config-prettier @typescript-eslint/eslint-plugin @typescript-eslint/parser"
    },
    "dependencies": {
        "@google-cloud/storage": "^6.11.0",
        "@mikro-orm/core": "^5.7.12",
        "@mikro-orm/nestjs": "^5.2.0",
        "@mikro-orm/postgresql": "^5.7.12",
        "@nestjs/common": "^9.4.0",
        "@nestjs/config": "^2.3.1",
        "@nestjs/core": "^9.4.0",
        "@nestjs/microservices": "^9.4.0",
        "@nestjs/platform-express": "^9.4.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "pg": "^8.10.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "~7.8.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.4.2",
        "@nestjs/schematics": "^9.1.0",
        "@nestjs/testing": "^9.4.0",
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.68",
        "@types/express": "^4.17.17",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.16.19",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "source-map-support": "^0.5.21",
        "swc-loader": "^0.2.3",
        "ts-loader": "^9.4.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.0.4",
        "unimport": "^3.0.14"
    }
}
