{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "noImplicitAny": true,
        "noPropertyAccessFromIndexSignature": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "strictNullChecks": true,
        "useDefineForClassFields": true,
        "noImplicitThis": true,
        "diagnostics": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": true,
        "extendedDiagnostics": false,
        "module": "esnext",
        "baseUrl": ".",
        "rootDir": ".",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "typeRoots": ["./packages/types/index.d.ts"],
        "paths": {
            "@/*": ["*"],
            "@/types/*": ["packages/types/*"],
            "@/types": ["packages/types/index.ts"],
            "@/enums/*": ["packages/enums/*"],
            "@/enums": ["packages/enums/index.ts"],
            "@/config": ["config/index.ts"],
            "@/fonts/*": ["packages/fonts/*"],
            "@/css/*": ["packages/css/*"],
            "@/nexus/client/*": ["apps/nexus/client/src/*"],
            "@/nexus/server/*": ["apps/nexus/server/src/*"],
            "@/liedecke-noergaard/*": ["apps/liedecke-noergaard/src/*"],
            "@/liedecke-noergaard/public/*": ["apps/liedecke-noergaard/public/*"],
            "@/website/*": ["website/src/*"]
        }
    }
}
