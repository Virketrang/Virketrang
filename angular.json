{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "cli": {
        "packageManager": "yarn"
    },
    "newProjectRoot": "projects",
    "projects": {
        "webshop-desktop": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "sass"
                }
            },
            "root": "projects/webshop/client/desktop/frontend",
            "sourceRoot": "projects/webshop/client/desktop/frontend/src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "outputPath": "projects/webshop/client/desktop/backend/dist",
                        "index": "projects/webshop/client/desktop/frontend/src/index.html",
                        "main": "projects/webshop/client/desktop/frontend/src/main.ts",
                        "polyfills": ["zone.js"],
                        "tsConfig": "projects/webshop/client/desktop/frontend/tsconfig.app.json",
                        "inlineStyleLanguage": "sass",
                        "assets": [
                            "projects/webshop/client/desktop/frontend/src/favicon.ico",
                            "projects/webshop/client/desktop/frontend/src/assets"
                        ],
                        "styles": ["projects/webshop/client/desktop/frontend/src/styles.sass"],
                        "scripts": []
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "500kb",
                                    "maximumError": "1mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "2kb",
                                    "maximumError": "4kb"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "buildOptimizer": false,
                            "optimization": false,
                            "vendorChunk": true,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": {
                            "browserTarget": "webshop-desktop:build:production"
                        },
                        "development": {
                            "browserTarget": "webshop-desktop:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "webshop-desktop:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "polyfills": ["zone.js", "zone.js/testing"],
                        "tsConfig": "projects/webshop/client/desktop/frontend/tsconfig.spec.json",
                        "inlineStyleLanguage": "sass",
                        "assets": [
                            "projects/webshop/client/desktop/frontend/src/favicon.ico",
                            "projects/webshop/client/desktop/frontend/src/assets"
                        ],
                        "styles": ["projects/webshop/client/desktop/frontend/src/styles.sass"],
                        "scripts": []
                    }
                }
            }
        }
    }
}
