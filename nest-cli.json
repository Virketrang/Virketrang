{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "monorepo": true,
    "projects": {
        "prometheus": {
            "type": "application",
            "root": "apps/prometheus/server",
            "entryFile": "server/src/main",
            "sourceRoot": "apps/prometheus/server/src",
            "compilerOptions": {
                "tsConfigPath": "apps/prometheus/server/tsconfig.json"
            }
        },
        "strive": {
            "type": "application",
            "root": "apps/strive/server",
            "entryFile": "server/src/main",
            "sourceRoot": "apps/strive/server/src",
            "compilerOptions": {
                "tsConfigPath": "apps/strive/server/tsconfig.json"
            }
        }
    }
}
