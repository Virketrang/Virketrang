{
    "$schema": "https://json.schemastore.org/nest-cli",
    "sourceRoot": "server/src",
    "root": "server",
    "collection": "@nestjs/schematics",
    "compilerOptions": {
        "webpack": true,
        "webpackConfigPath": "server/webpack.config.js",
        "tsConfigPath": "server/tsconfig.json"
    },
    "monorepo": true,
    "projects": {
        "server": {
            "type": "application",
            "root": "server",
            "entryFile": "main",
            "sourceRoot": "server/src",
            "compilerOptions": {
                "tsConfigPath": "server/tsconfig.json",
                "webpack": true,
                "webpackConfigPath": "server/webpack.config.js"
            }
        }
    }
}
