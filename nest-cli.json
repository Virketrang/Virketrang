{
    "$schema": "https://json.schemastore.org/nest-cli",
    "sourceRoot": "server/src",
    "root": "server",
    "collection": "@nestjs/schematics",
    "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "server/tsconfig.json"
    },
    "monorepo": true,
    "projects": {
        "server": {
            "type": "application",
            "root": "server",
            "entryFile": "main",
            "sourceRoot": "server/src",
            "compilerOptions": {
                "tsConfigPath": "server/tsconfig.json"
            }
        },
        "strive": {
            "type": "application",
            "root": "apps/strive/server",
            "entryFile": "main",
            "sourceRoot": "apps/strive/server/src",
            "compilerOptions": {
                "tsConfigPath": "apps/strive/server/tsconfig.json"
            }
        }
    }
}
