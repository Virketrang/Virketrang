{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "node",
        "types": ["node"],
        "typeRoots": ["unimport.d.ts", "src/declarations.d.ts", "storybook.d.ts"],
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "preserveSymlinks": true,
        "resolveJsonModule": true,
        "allowUmdGlobalAccess": true,
        "paths": {}
    },
    "include": ["src", "unimport.d.ts", "storybook.d.ts"],
    "exclude": ["node_modules", "dist"]
}
