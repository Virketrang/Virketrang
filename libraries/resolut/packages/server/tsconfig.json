{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "plugins": [{ "name": "typescript-plugin-css-modules", "options": { "classnameTransform": "camelCase" } }],
        "paths": {
            "styles/*": ["../../styles/*"],
            "types/*": ["../../types/*"],
            "logic/*": ["../../logic/*"],
            "utils/*": ["../../utils/*"]
        },
        "jsx": "react-jsx"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.css.ts"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
