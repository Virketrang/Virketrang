{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "plugins": [{ "name": "typescript-plugin-css-modules", "options": { "classnameTransform": "camelCase" } }],
        "paths": {
            "styles/*": ["../../styles/*"],
            "types/*": ["../../types/*"],
            "utils/*": ["../../utils/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}
