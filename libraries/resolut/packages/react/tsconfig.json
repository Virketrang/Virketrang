{
    "$schema": "../../../../schemas/typescript.json",
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "outDir": "./.build",
        "diagnostics": true,
        "target": "ES2020",
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "incremental": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "plugins": [{ "name": "typescript-plugin-css-modules", "options": { "classnameTransform": "camelCase" } }],
        "paths": {
            "@/*": ["../../*"],
            "@styles/*": ["../../styles/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "../shared/**/*.ts", "../shared/**/*.tsx"],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.stories.ts",
        "**/*.stories.tsx",
        "../shared/**/*.stories..ts",
        "../shared/**/*.stories.tsx"
    ]
}
