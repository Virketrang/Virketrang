{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./build/",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strictBindCallApply": false,
        "paths": {
            "@packages/*": ["../packages/*"]
        }
    }
}
